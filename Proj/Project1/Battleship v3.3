record *newscre (string name,string Win,int Pts,int Len)
{
    record *temp=new record;
    if(name==Win)
    {   
          //create winner record
            (*temp).Name=Win;
            (*temp).Vs=1;
            (*temp).Ps=Pts;
            (*temp).Ts=Len;
            (*temp).Gs=1;
    }
    else
    {
          //create loser record
            (*temp).Name=name;
            (*temp).Vs=0;
            (*temp).Ps=Pts;
            (*temp).Ts=Len;
            (*temp).Gs=1;
    }
        
    return temp;
}
void updscre (string name,string Win,int Pts,int Len,int e,vector<record> &temp)
{
    if(name==Win)
    {   
          //update winner record
            temp[e].Vs++;
            temp[e].Ps+=Pts;
            temp[e].Ts+=Len;
            temp[e].Gs++;
    }
    else
    {
          //update loser record
            temp[e].Ps+=Pts;
            temp[e].Ts+=Len;
            temp[e].Gs++;
    }
        
}
